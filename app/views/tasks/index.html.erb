<h1>Listing tasks</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Start at</th>
      <th>End at</th>
      <th>time</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task %></td>
        <td><%= task.start_at.to_s(:date) %></td>
        <td><%= task.start_at.to_s(:time) %></td>
        <td><%= task.end_at.to_s(:time) %></td>
        <td><%= task.time_second / 60 %></td>
        <td><%= link_to task.project.name, task.project %></td>
        <td>
          <%= link_to 'Edit', edit_task_path(task), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                task_path(task),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% unless @report.nil? %>
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Name</th>
        <th>time</th>
      </tr>
    </thead>

    <tbody>
      <% @report.each do |key, value| %>
        <tr>
          <td><%= key.name %></td>
          <td><%= value / 60 %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>

<%= link_to 'New Task', new_task_path %>
