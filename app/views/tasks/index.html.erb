<h1>Listing tasks<%= @daterange ? '(' + @daterange + ')' : "" %></h1>

<%= form_tag(import_tasks_path, :method => :post, multipart: true) do %>
  <div class="form-group">
    <%= file_field_tag :csv_file %>
  </div>
  <%= submit_tag "CSV Import", :class => "btn btn-primary" %>
<% end %>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Start at</th>
      <th>End at</th>
      <th>time(H)</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <%= form_for(@task, :html => {:class => "form-horizontal", :role=>"form"}) do |f| %>
        <td><%= f.text_field :name %></td>
        <td><input type="text" name="task[date]" class="datepicker"/></td>
        <td><input type="text" name="task[starttime]" class="input-small timepicker"/></td>
        <td><input type="text" name="task[endtime]" class="input-small timepicker"/></td>
        <td></td>
        <td><%= f.collection_select(:project_id, Project.all, :id, :name) %></td>
        <td><%= f.submit(:class => 'btn') %></td>
      <% end %>
    </tr>

    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task %></td>
        <td><%= task.start_at.to_s(:date) %></td>
        <td><%= task.start_at.to_s(:time) %></td>
        <td><%= task.end_at.to_s(:time) %></td>
        <td><%= task.time_hour %></td>
        <td><%= link_to task.project.name, task.project %></td>
        <td>
          <%= link_to 'Edit', edit_task_path(task), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                task_path(task),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% unless @report.nil? %>
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Name</th>
        <th>time(H)</th>
      </tr>
    </thead>

    <tbody>
      <% @report.each do |key, value| %>
        <tr>
          <td><%= key.name %></td>
          <td><%= value %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>

<%= link_to 'New Task', new_task_path %>
