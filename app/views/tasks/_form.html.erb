<%= form_for(@task, :html => {:class => "form-horizontal", :role=>"form"}) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date, class: 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :starttime %><br>
    <%= f.text_field :starttime, class: 'timepicker' %>
  </div>
  <div class="field">
    <%= f.label :endtime %><br>
    <%= f.text_field :endtime, class: 'timepicker' %>
  </div>
  <div class="field">
    <%= f.label :project_id %><br>
    <%= projects_select_tag f %>
  </div>
  <div class="actions">
    <%= f.submit %>
    <%= f.submit "Create and Continue", name: "create_and_continue" %>
  </div>
<% end %>
